{
  "swagger": "2.0",
  "info": {
    "description": "API de encurtador de links",
    "version": "1.0.0",
    "title": "Encurtador de links"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "URL",
      "description": "API para encurtar URLs"
    },
    {
      "name": "Users",
      "description": "API para gerenciar usuários"
    },
    {
      "name": "Auth",
      "description": "API para autenticação de usuários"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/url": {
      "post": {
        "tags": [
          "URL"
        ],
        "summary": "Encurtar URL",
        "description": "Cria um novo link encurtado a partir de uma URL.",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Link a ser encurtado",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "link": {
                  "type": "string",
                  "description": "URL a ser encurtada"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Link encurtado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "link": {
                  "type": "string",
                  "description": "Link encurtado gerado"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Descrição do erro"
                }
              }
            }
          }
        }
      }
    },
    "/url/{id}": {
      "get": {
        "tags": [
          "URL"
        ],
        "summary": "Redirecionar para URL original",
        "description": "Redireciona para a URL original a partir de um link encurtado.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do link encurtado",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Redirecionamento para URL original",
            "schema": {
              "type": "object",
              "properties": {
                "link_encurtado": {
                  "type": "string",
                  "description": "Link encurtado solicitado"
                }
              }
            }
          },
          "404": {
            "description": "Link não encontrado",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Descrição do erro"
                }
              }
            }
          }
        }
      }
    }
  }
}